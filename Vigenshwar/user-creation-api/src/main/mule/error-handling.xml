			<ee:message >
			</ee:message>
			<ee:variables >
				<ee:set-variable variableName="errorRaised" ><![CDATA[%dw 2.0
output application/java
---
true]]></ee:set-variable>
				<ee:set-variable variableName="errorMessage" ><![CDATA[%dw 2.0
output application/java
---
if(vars.errorMessage?) 
	vars.errorMessage 
else 
	error.exception.message]]></ee:set-variable>
				<ee:set-variable variableName="errorDescription" ><![CDATA[%dw 2.0
output application/java
---
if(vars.errorDescription?) 
	vars.errorDescription 
else 
	error.exception]]></ee:set-variable>
				<ee:set-variable variableName="logCategory" ><![CDATA[%dw 2.0
output application/java
---
'Exception']]></ee:set-variable>
				<ee:set-variable variableName="logLevel" ><![CDATA[%dw 2.0
output application/java
---
'ERROR']]></ee:set-variable>
			</ee:variables>
		</ee:transform>
		<ee:transform doc:name="Compose Error Payload" doc:id="a2d0643a-1c43-44bf-93b1-c08e0a14ee15">
			<ee:message>
				<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
error: {
	errorCode: vars.httpStatus,
	errorDateTime: now() as String { format: "yyyy-MM-dd'T'HH:mm:ss" },
	errorMessage: if(vars.errorMessage != null) vars.errorMessage else 'error',
	errorDescription: if(vars.errorDescription != null) vars.errorDescription else 'error'
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
        <ee:transform doc:name="loggingObj" doc:id="b246aff7-e93d-4d16-b094-f5e24a6e725e" >
			<ee:message >
			</ee:message>
			<ee:variables >
				<ee:set-variable variableName="loggingObj" ><![CDATA[%dw 2.0
output application/json
---
(vars.loggingObjCommon default {})  ++
{
    "status": "FAILED",
    "requestPayload": vars.inPayload default "",
    "responsePayload": write(payload default {}, "application/json"),
    "severity": "Critical",
    "errorCode": payload.error.errorCode default "",
    "errorMessage": payload.error.errorMessage default "",
  	"loggingSystems": "logger"

}]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
		<flow-ref doc:name="sendLoggingEvent_flow" doc:id="ff7db527-0157-4965-93a0-47402524c93e" name="sendLoggingEvent_flow" target="loggingResonse" targetValue="#[payload]" />
