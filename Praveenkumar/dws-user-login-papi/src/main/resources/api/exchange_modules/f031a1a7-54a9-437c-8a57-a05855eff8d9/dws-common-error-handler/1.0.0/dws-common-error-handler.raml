#%RAML 1.0 Trait
displayName: Common API Error Responses
description: Common error responses for standard HTTP Status codes.
  
responses:
  400:
    description: Bad Request – The request contains invalid syntax or parameters.
    body:
      application/json:
        example: !include examples/common-error-400-example.json
  401:
    description: Unauthorized – Authentication is required or failed.
    body:
      application/json:
        example: !include examples/common-error-401-example.json
  403:
    description: Forbidden – The user does not have permission to access the resource.
    body:
      application/json:
        example: !include examples/common-error-403-example.json      
  404:
    description: Not Found – The requested resource does not exist.
    body:
      application/json:
        example: !include examples/common-error-404-example.json
  405:
    description: Method Not Allowed – The HTTP method is not supported for the endpoint.
    body:
      application/json:
        example: !include examples/common-error-405-example.json
  406:
    description: Not Acceptable – The request format is not supported.
    body:
      application/json:
        example: !include examples/common-error-406-example.json        
  408:
    description: Request Timeout – The server took too long to respond.
    body:
      application/json:
        example: !include examples/common-error-408-example.json                         
  415:
    description: Unsupported Media Type – The media type in the request is not supported.
    body:
      application/json:
        example: !include examples/common-error-415-example.json                  
  429:
    description: Too Many Requests – The client has sent too many requests in a short time.
    body:
      application/json:
        example: !include examples/common-error-429-example.json                              
  500:
    description: Internal Server Error – An unexpected server-side error occurred.
    body:
      application/json:
        example: !include examples/common-error-500-example.json                  
  501:
    description: Not Implemented – The requested functionality is not available.
    body:
      application/json:     
        example: !include examples/common-error-501-example.json            
  503:
    description: Service Unavailable – The server is temporarily unable to handle the request.
    body:
      application/json:
        example: !include examples/common-error-503-example.json 
  504:
    description: Gateway Timeout – The server did not receive a response in time.
    body:
      application/json:     
        example: !include examples/common-error-504-example.json                        
