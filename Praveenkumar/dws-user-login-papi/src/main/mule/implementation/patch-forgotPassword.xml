<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:http="http://www.mulesoft.org/schema/mule/http"
      xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
      xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="
          http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
          http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
          http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
    <sub-flow name="patch-forgotPassword-flow">

        <!-- Step 1: Log entry -->
        <logger level="INFO"
                message="*** [Forgot Password] Request received for #[payload.email] | CorrelationId: #[correlationId] ***"
                doc:name="Log Request"/>

        <!-- Step 2: Generate & Send OTP (reuse sendOtp flow) -->
        <flow-ref name="subflow-generateAndSendOtp" doc:name="Call SendOtp Subflow" doc:id="3ec6dffc-ce07-42c8-86ca-4fafeeb17703"/>
        <logger level="INFO"
                message="*** [Forgot Password] OTP sent to #[payload.email] ***"
                doc:name="Log OTP Sent"/>

        <!-- Step 3: Verify OTP (reuse verifyOtp flow) -->
        <flow-ref name="post:\verify-otp:application\json" doc:name="Call VerifyOtp Subflow" doc:id="56d5af5f-00e9-4019-99f5-2ef8cb100feb"/>

        <!-- Step 4: Choice Router to handle OTP validation -->
        <choice doc:name="Check OTP Validity">
            <when expression="#[vars.vOtpValid == true]">

                <logger level="INFO"
                        message="*** [Forgot Password] OTP verification successful for #[payload.email] ***"
                        doc:name="Log OTP Success"/>

                <!-- Step 5: Reset Password in System API -->
                <http:request method="PATCH"
                              config-ref="http-user_login-sapi-request_configuration"
                              path="${user_login_sapi.path.forgotPassword}"
                              doc:name="Request Update Password">
                    <http:body><![CDATA[#[%dw 2.0
output application/json
---
{
  email: payload.email,
  newPassword: payload.newPassword
}]]]></http:body>
                </http:request>

                <logger level="INFO"
                        message="*** [Forgot Password] Password updated successfully for #[payload.email] ***"
                        doc:name="Log Password Updated"/>
            </when>

            <otherwise>
                <logger level="ERROR"
                        message="*** [Forgot Password] OTP verification failed for #[payload.email] ***"
                        doc:name="Log OTP Failure"/>
                <raise-error type="BUSINESS:OTP_INVALID"
                             description="OTP invalid or expired. Please resend OTP."/>
            </otherwise>
        </choice>
    </sub-flow>

</mule>
